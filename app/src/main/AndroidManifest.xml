<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/dice"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dice"
        android:supportsRtl="true"
        android:theme="@style/Theme.RandomizerApp"
        tools:targetApi="31">
        <activity
            android:name=".CoinActivity"
            android:exported="false"
            android:label="@string/title_activity_coin"
            android:theme="@style/Theme.RandomizerApp" />
        <activity
            android:name=".DiceActivity"
            android:exported="false"
            android:label="@string/title_activity_dice"
            android:theme="@style/Theme.RandomizerApp" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>